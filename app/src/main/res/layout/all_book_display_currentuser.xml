<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="185dp"
        android:layout_height="204dp"
        android:layout_centerInParent="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="105dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:id="@+id/book_image"
                android:src="@drawable/common_google_signin_btn_icon_dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="წიგნის სათაური"
                android:layout_below="@+id/book_image"
                android:textColor="#29cfc5"
                android:fontFamily="@font/bpg_banner_caps"
                android:textSize="58px"
                android:paddingLeft="5dp"
                android:id="@+id/book_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="წიგნის ავტორი"
                android:layout_below="@+id/book_name"
                android:textColor="#29cfc5"
                android:fontFamily="@font/bpg_banner_caps"
                android:textSize="48px"
                android:paddingLeft="5dp"
                android:id="@+id/book_author"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="წიგნი ეკუთვნის"
                android:layout_below="@+id/book_author"
                android:textColor="#29cfc5"
                android:fontFamily="@font/bpg_banner_caps"
                android:textSize="48px"
                android:paddingLeft="5dp"
                android:id="@+id/book_owner"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="წიგნნი იმყოფება"
                android:layout_below="@+id/book_owner"
                android:textColor="#29cfc5"
                android:fontFamily="@font/bpg_banner_caps"
                android:textSize="48px"
                android:paddingLeft="5dp"
                android:id="@+id/book_owner_address"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>