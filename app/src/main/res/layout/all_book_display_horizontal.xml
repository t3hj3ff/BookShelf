<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="185dp"
        android:layout_height="204dp"
        android:layout_centerInParent="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/common_google_signin_btn_icon_dark" />

        <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/book_image"
            android:fontFamily="@font/bpg_banner_caps"
            android:paddingLeft="5dp"
            android:text="წიგნის სათაური"
            android:textColor="#29cfc5"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/book_name"
            android:fontFamily="@font/bpg_banner_caps"
            android:paddingLeft="5dp"
            android:text="წიგნის ავტორი"
            android:textColor="#29cfc5"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/book_owner"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/book_author"
            android:fontFamily="@font/bpg_banner_caps"
            android:paddingLeft="5dp"
            android:text="წიგნი ეკუთვნის"
            android:textColor="#29cfc5"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/book_owner_address"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/book_owner"
            android:fontFamily="@font/bpg_banner_caps"
            android:paddingLeft="5dp"
            android:text="წიგნნი იმყოფება"
            android:textColor="#29cfc5"
            android:textSize="10sp" />

        <Button
            android:id="@+id/share_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/sharebutton"
            android:layout_below="@+id/book_owner"/>


    </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>