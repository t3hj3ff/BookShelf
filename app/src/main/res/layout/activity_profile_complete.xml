<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileCompleteActivity">


    <RelativeLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="370dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/buttonRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></RelativeLayout>

    <EditText
        android:id="@+id/editTextBDate"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20px"
        android:layout_marginStart="176dp"
        android:layout_marginTop="336dp"
        android:backgroundTint="#a41b47"
        android:fontFamily="@font/bpg_banner_caps"
        android:hint="დაბადების თარიღი"
        android:inputType="text"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="InvalidId,MissingConstraints" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20px"
        android:layout_marginStart="176dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="17dp"
        android:backgroundTint="#a41b47"
        android:fontFamily="@font/bpg_banner_caps"
        android:hint="სახელი"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="InvalidId,MissingConstraints" />

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20px"
        android:layout_marginStart="176dp"
        android:layout_marginTop="232dp"
        android:backgroundTint="#a41b47"
        android:fontFamily="@font/bpg_banner_caps"
        android:hint="მისამართი"
        android:inputType="text"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="InvalidId,MissingConstraints" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20px"
        android:layout_marginStart="176dp"
        android:layout_marginTop="284dp"
        android:backgroundTint="#a41b47"
        android:fontFamily="@font/bpg_banner_caps"
        android:hint="ტელეფონი"
        android:inputType="text"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="InvalidId,MissingConstraints" />

    <Button
        android:id="@+id/buttonCompleteProfile"
        android:layout_width="356dp"
        android:layout_height="77dp"
        android:layout_marginHorizontal="150px"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="#29cfc5"
        android:fontFamily="@font/bpg_banner_caps"
        android:text="დასრულება"
        android:textAllCaps="false"
        android:textColor="#631934"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.986"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextPhone"
        app:layout_constraintEnd_toStartOf="@+id/editTextName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewUserEmail"
        android:layout_width="192dp"
        android:layout_height="20dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="392dp" />

</android.support.constraint.ConstraintLayout>